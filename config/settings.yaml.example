# Budget Analyzer Configuration
# ==============================
# Copy this file to settings.yaml and customize for your data.

# Time period for analysis
year: 2025
title: "Spending Analysis"

# Language for report UI (default: "en")
# Supported: "en" (English), "tr" (Turkish)
# language: en

# Currency display format (default: "${amount}")
# Use {amount} as placeholder for the formatted number
# currency_format: "${amount}"      # US Dollar (prefix)
# currency_format: "{amount} zł"    # Polish Złoty (suffix)
# currency_format: "€{amount}"      # Euro (prefix)
# currency_format: "£{amount}"      # British Pound (prefix)

# Data sources - list of transaction files to process
# Paths are relative to the parent of the config directory
data_sources:
  - name: AMEX
    file: data/amex-2025.csv
    type: amex
  - name: BOA
    file: data/boa-checking.txt
    type: boa
  # European format example:
  # - name: Deutsche Bank
  #   file: data/deutsche.csv
  #   format: "{date:%d.%m.%Y},{description},{amount}"
  #   decimal_separator: ","  # 1.234,56 format

  # Multi-column description example:
  # Some banks split transaction info across columns (e.g., type + recipient).
  # Use custom captures to combine them:
  # - name: European Bank
  #   file: data/bank.csv
  #   format: "{date:%d.%m.%Y},{_},{txn_type},{vendor},{_},{amount}"
  #   columns:
  #     description: "{vendor} ({txn_type})"  # Combines columns into description

# Output settings
output_dir: output
html_filename: spending_summary.html
